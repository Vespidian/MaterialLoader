{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "make",
    
    "tasks": [
        {
            "label": "run_make",
            "type": "shell",
            "command": "cd src | cls | mingw32-make",
            // "problemMatcher": [],
            // "group": {
            //     "kind": "build",
            //     "isDefault": true
            // },
            // "presentation": {
            //     "clear": true
            // },
			"console": "externalTerminal"
        },
        {
            "type": "shell",
            "label": "C/C++: gcc.exe build active file",
            "command": "C:\\MinGW\\bin\\gcc.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}